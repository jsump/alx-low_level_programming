CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

$(NAME): m.h $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

all: $(NAME)

clean: 
	-@$(RM) -f *~ $(NAME)

oclean:
	-@$(RM) -f $(OBJ)

fclean: clean oclean
re: fclean all
