CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

all: $(NAME)

clean: 
	-@$(RM) -f *~ $(NAME) 2>/dev/null || true

oclean:
	-@$(RM) -f $(OBJ) 2>/dev/null || true

fclean: clean oclean
re: oclean all

$(SRC): m.h
